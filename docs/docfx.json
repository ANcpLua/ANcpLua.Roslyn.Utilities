{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "build": {
    "content": [
      {
        "files": ["**/*.md", "**/toc.yml"],
        "exclude": ["_site/**", "obj/**", "api/**"]
      }
    ],
    "resource": [
      {
        "files": ["images/**"]
      }
    ],
    "output": "_site",
    "globalMetadata": {
      "_appTitle": "ANcpLua Developer Documentation",
      "_appName": "ANcpLua",
      "_appFooter": "ANcpLua - Roslyn Utilities, Analyzers & SDK",
      "_enableSearch": true,
      "_enableNewTab": true,
      "_gitContribute": {
        "repo": "https://github.com/ANcpLua/ANcpLua.Roslyn.Utilities",
        "branch": "main"
      }
    },
    "template": ["default", "modern"],
    "postProcessors": ["ExtractSearchIndex"],
    "keepFileLink": false,
    "disableGitFeatures": false
  }
}
