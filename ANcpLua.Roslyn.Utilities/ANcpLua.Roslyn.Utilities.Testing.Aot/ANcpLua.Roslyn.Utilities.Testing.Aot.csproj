<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

    <PackageId>ANcpLua.Roslyn.Utilities.Testing.Aot</PackageId>
    <Title>ANcpLua AOT/Trim Testing Utilities</Title>
    <Description>Attributes and utilities for testing AOT compilation and IL trimming behavior in .NET applications.</Description>
    <PackageTags>aot;trimming;native-aot;testing;publishaot;publishtrimmed</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>

    <!-- Suppress analyzer warnings for netstandard2.0 compatibility -->
    <NoWarn>$(NoWarn);CS1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="/" />
    <None Include="..\..\LICENSE" Pack="true" PackagePath="\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="PolySharp" PrivateAssets="all" />
  </ItemGroup>
</Project>
